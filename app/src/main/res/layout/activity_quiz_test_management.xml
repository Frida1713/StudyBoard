<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizTestManagementActivity">

    <!-- Toolbar for Quiz/Test Management -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:title="Quiz and Test Management"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="?attr/colorPrimary"
        tools:ignore="MissingConstraints" />

    <!-- Button to Create Quiz/Test -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Quiz/Test"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button to Upload Assignment -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadAssignmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Assignment"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/createQuizButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView to Display List of Quizzes and Tests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quizTestRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/uploadAssignmentButton"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Button to View Results -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewResultsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Results"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/quizTestRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
