<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".UserDashboardActivity"
    tools:ignore="ExtraText">

        <!-- Study Materials Button -->
        <Button
            android:id="@+id/btnStudyMaterials"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Study Materials"
            android:textSize="25sp"
            android:layout_marginTop="110dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:drawableLeft="@mipmap/ic_materials"
            android:compoundDrawablePadding="16dp" />

        <!-- Quizzes/Tests Button -->
        <Button
            android:id="@+id/btnQuizzesTests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quizzes/Tests"
            android:textSize="25sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/btnStudyMaterials"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:drawableLeft="@mipmap/ic_quizz"
        android:compoundDrawablePadding="16dp" />

        <!-- Notes and Bookmarks Button -->
        <Button
            android:id="@+id/btnNotesBookmarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Notes and Bookmarks"
            android:textSize="25sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/btnQuizzesTests"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:drawableLeft="@mipmap/ic_book_notes"
        android:compoundDrawablePadding="16dp" />

        <!-- Push Notifications Button -->
        <Button
            android:id="@+id/btnPushNotifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Push Notifications"
            android:textSize="25sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/btnNotesBookmarks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:drawableLeft="@mipmap/ic_notifications"
        android:compoundDrawablePadding="16dp" />

        <!-- Forum/Discussion Area Button -->
        <Button
            android:id="@+id/btnForum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Forum/Discussion Area"
            android:textSize="25sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/btnPushNotifications"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:drawableLeft="@mipmap/ic_forum"
        android:compoundDrawablePadding="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
